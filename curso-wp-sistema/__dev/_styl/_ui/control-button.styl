.control-button
	position fixed
	bottom 20px
	right 20px
	z-index 50
	button
		width 70px
		height 70px
		radius(50%)
		border 0
		background success
		display flex
		align-items center
		justify-content center
		border 5px #FFF solid
		shadow(0px 0px 90px 0px rgba(161,165,188,0.4))
		span
			font-size 30px
			color #FFF