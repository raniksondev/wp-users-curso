.login-page
	height 100%
	width 100%
	display flex
	flex-direction row
	.col-text
		display flex
		flex 1
		align-items center
		justify-content center
		background primary
		flex-direction column
		color #FFF
		padding 20px
		h1
			font-size 55px
			font-weight 200
			line-height 38px
		p
			font-weight 500
		.logo
			display flex
			align-items top
			.icon
				padding-right 5px
			p
				margin-bottom 0
	.col-form
		display flex
		flex 2
		flex-direction column
		padding 20px
		justify-content center
		align-items center
		position relative
		.header-actions
			position absolute
			top 20px
			right 20px
		.form-box
			width 450px
			padding 30px
			h2
				font-size 25px
				font-weight 600
				line-height 25px
			.header
				margin-bottom 30px