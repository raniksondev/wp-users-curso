.app
	width 100%
	height 100%
	display flex
	.menu
		width 80px
		background primary
		display flex
		flex-direction column
		.logo
			height 60px
			background black
			display flex
			align-items center
			justify-content center
		.menu-links
			display flex
			flex-direction column
			justify-content center
			height 100%
			a
				color #FFF
				display flex
				align-items center
				justify-content center
				flex-direction column
				padding 12px
				background primary
				transitionTime(0.1s)
				span
					font-size 23px
					line-height 26px
				div
					font-size 11px
					font-weight 500
			a:hover
				background primary - 12
		.menu-links
			a.active
				background primary - 20
	.submenu
		width 200px
		padding 20px
		border-right 1px primary - 40 solid
		background primary - 25
		display flex
		align-items center
		ul
			list-style none
			padding 0
			margin 0
			flex 1
			li
				margin-bottom 5px
				a
					color #FFF
					font-weight 500
					font-size 12px
					padding 5px 10px
					display block
					radius(2px)
					transitionTime(0.1s)
				a:hover
					background primary - 40
				a.active
					background primary + 10
				

	.content
		flex 1
		background bgd
