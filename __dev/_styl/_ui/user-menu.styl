.user-menu
	position relative
	button
		border 0
		padding 5px
		background transparent
		radiusmaster(5px, 5px, 0px, 0px)
		img
			height 40px
	.menu
		position absolute
		top 50px
		right 0
		padding 10px 20px
		background primary
		border-radius
		radiusmaster(5px, 0px, 5px, 5px)
		display none
		ul
			list-style none
			padding 0
			margin 0
			li 
				a
					color #FFF
					padding 5px 0
					display inline-block

.user-menu:hover
	button
		background primary
	.menu
		display block