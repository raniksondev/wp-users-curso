.modal
	background #FFF
	shadow(0px 0px 100px 0px rgba(161,165,188,0.3))
	radius(3px)
	position fixed
	z-index 100
	top - 200%
	width 500px
	left 50%
	margin-left -250px
	.header
		padding 0 30px 20px 30px
		border-bottom 1px border solid
		margin-bottom 20px
		h4
			font-weight 500
			font-size 20px
			line-height 20px
			margin 0
		p
			margin-bottom 0
	.body
		padding 0 30px 30px 30px
		
	.ico
		width 110px
		height 110px
		radius(50%)
		margin -50px auto 0 auto
		background primary
		display flex
		align-items center
		justify-content center
		border 8px #FFF solid
		span
			font-size 40px
			color #FFF
	.footer
		padding 15px 30px
		background bgl
		border-top 1px border solid
		radiusmaster(0, 0, 3px, 3px)
			
