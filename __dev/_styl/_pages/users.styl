.page-users
	padding 20px
	overflow auto
	.users-items
		display flex
		flex-wrap wrap
		.user-item
			border 1px border solid
			background #FFF
			margin-right 15px
			margin-bottom 15px
			radius(4px)
			position relative
			.status
				width 10px
				height 10px
				position absolute
				top 10px
				left 10px
				background bgd - 20
				radius(50%)
			.status.block
				background danger
			.status.unblock
				background success
			.btn-manager-user
				position absolute
				top 0
				right 0
				background transparent
				border 0
				width 30px
				height 40px
				span
					font-size 20px
					color bgsd
			.btn-manager-user.active
				span
					color success
			.avatar
				margin-bottom 10px
				img
					width 100px
					height 100px
					radius(50px)
					display inline-block
			.name
				font-weight 400
				color black
				line-height 15px
			.role
				font-size 12px
				color primary
			.body
				padding 20px 30px
			.footer
				padding 10px 15px
				background bgl
				border-top 1px border solid